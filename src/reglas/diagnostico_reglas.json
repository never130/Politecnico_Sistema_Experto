      "diagnostico": "Crisis Asmática",
      "gravedad": "Moderado"
    },
    {
      "id": "epoc_cronico",
      "descripcion": "Paciente mayor, fumador, con disnea progresiva.",
      "condiciones": {
        "todos": [
          {"hecho": "edad", "operador": "mayor_que", "valor": 60},
          {"hecho": "fumador", "operador": "igual", "valor": "de_toda_la_vida"},
