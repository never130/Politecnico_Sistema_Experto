        "todos": [
          {"hecho": "edad", "operador": "menor_que", "valor": 2},
          {"hecho": "falta_de_aire", "operador": "igual", "valor": "repentina"},
          {"hecho": "sibilancias", "operador": "igual", "valor": true}
        ]
      },
      "diagnostico": "Bronquiolitis",
      "gravedad": "Moderado"
    }
  ]
