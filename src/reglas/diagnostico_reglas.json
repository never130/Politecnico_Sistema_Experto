        "todos": [
          {"hecho": "tos", "operador": "igual", "valor": "con_flema_transparente_verdosa"},
          {"hecho": "malestar_general", "operador": "igual", "valor": true},
          {"hecho": "fiebre", "operador": "menor_que", "valor": 38}
